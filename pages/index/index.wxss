/**index.wxss**/
page{
    font-family: 'PingFang SC', 'Helvetica Neue', Helvetica, 'Droid Sans Fallback', 'Microsoft Yahei', sans-serif;
    width: 100%;
    background-color: #f1f1f1;  
}

.topBG {
    background-color: #1bd0ad;
    height: 300rpx;
    position: relative;
    z-index: 1;
    width: 100%;
}

.topImage {
    width: 100%;
    height: 300rpx;
    position: absolute;
    z-index: 2;
}
.todayData {
    width: 620rpx;
    height: 330rpx;
    background-color: #ffffff;
    position: absolute;
    left: 50%;
    margin-left: -310rpx;
    margin-top: -205rpx;
    border-radius: 20rpx;
    z-index: 4;
    box-shadow: 0px 0px 10px #d9dbdb;
}

.signIn{
  display: flex;
  width: 180rpx;
  height: 180rpx;
  margin-left: auto;
  margin-right: auto;
  border-radius: 50%;
}

.headBottom1,.headBottom2{
  display: flex;
  /* margin-top: 10rpx; */
}

.name1,.department1,.name2,.department2{
  width: 50%;
  text-align: center;
  font-size: 30rpx;
  color: #666666;
}
.name2,.department2{
  color: #000;
}

.swiper-box{
  display: none;
  margin-top: 200rpx;
}
.on {
  display:block;
}

.bg-container {
  position: relative;
  overflow:visible;
}
.bg-border {
  position: absolute;
  top:50%; 
  left:50%;
  border-radius: 50%;
}
.bg-1 {
  height: 280rpx;
  width: 280rpx;
  /* background-color: #e5e5e5; */
  background-color: #fff;
  text-align: center;
  margin: 0px auto;
  transform: translate(-50%, 50%);
  z-index: 99;
}
.bg-2 {
  margin-top:-120rpx;
  margin-left:-120rpx;
  height: 240rpx;
  width: 240rpx;
  background-color: #e2f1ee;
}
.bg-3 {
  margin-top:-100rpx;
  margin-left:-100rpx;
  height: 200rpx;
  width: 200rpx;
  background-color: #d2ece7;
}
.bg-content {
  height: 140rpx;
  width: 140rpx;
  margin-top:-70rpx;
  margin-left:-70rpx;
  font-size: 12px;
  background-color: #1bd0ad;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.bg-content view {
  line-height: 40rpx;
  color: #fff;
}
.bg-line-top {
  display: flex;
  justify-content: center;
  padding-top: 20rpx;
}
.bg-line-bottom {
  display: flex;
  justify-content: center;
  margin-top: 20rpx;
}
.bg-button-module {
  margin: 10rpx;
  width: 100rpx;
  color: #000;
  line-height: 40rpx;
  font-size: 30rpx;
  background-color: #fff;
  padding: 50rpx 120rpx;
  text-align: center;
}
.css-shadow{
  -moz-box-shadow:2px 2px 10px #78E4CC; 
  -webkit-box-shadow:2px 2px 10px #78E4CC; 
  box-shadow:2px 2px 10px #78E4CC;
}
.css-shadow-bottom{
  box-shadow:0px 2px 5px #78E4CC;
}
.bottimBG{
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 150rpx;
}


button::after{
  border:none;
}
input{
  outline:none;
  border:none;
  list-style: none;
}
.warrant .white{width:540rpx;height:580rpx;background-color:#fff;border-radius:15rpx;position:fixed;top:50%;left:54%;margin-left:-299.5rpx;margin-top:-345rpx;z-index:1000;}
.warrant .white .pictrue{background-image:url("https://bmob-cdn-24322.bmobcloud.com/2019/07/25/f6e77de940d2441180ade9cacb7daf13.png");background-repeat:no-repeat;background-size:100% 100%;width:400rpx;height:270rpx;margin:10rpx auto 0 auto;}
.warrant .white .tip{font-size:30rpx;color:#8a8a8a;text-align:center;margin-top:20rpx;padding:0 30rpx;}
.warrant .white .tap{text-align:center;margin-top:20rpx;font-size:34rpx;font-weight:600;}
.warrant .white button{width:200rpx;height:75rpx;line-height:75rpx;font-size:30rpx;border-radius:50rpx;margin-top:70rpx;}
.warrant .white .no{background-color:#fff;color:#1bd0ad;border: 1rpx solid #1bd0ad;}
.warrant .white .but{background-color:#1bd0ad;color:#fff;}
.warrant .white .but::after{border:none;}
.warrant .white .but:active{background-color:#1bd0ad;}
.warrant .mask{position:fixed;top:0;right:0;left:0;bottom:0;background-color:rgba(0, 0, 0, 0.7);z-index: 999}